{% block body %}
    <!-- BEGIN LOADER -->
    <div id="load_screen"> <div class="loader"> <div class="loader-content">
                <div class="spinner-grow align-self-center"></div>
            </div></div></div>
    <!--  END LOADER -->


    {%  include "dashboard/header.html.twig" %}

    <!--  BEGIN MAIN CONTAINER  -->
    <div class="main-container" id="container">

        <div class="overlay"></div>
        <div class="search-overlay"></div>

        {% include "dashboard/navbar.html.twig" %}

        <!--  BEGIN CONTENT AREA  -->
        <div id="content" class="main-content">
            <div class="layout-px-spacing">

                <div class="row layout-top-spacing">
                    <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
                        <div class="widget-content widget-content-area br-6">
                            <table id="multi-column-ordering" class="table table-hover" style="width:100%">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Membership</th>
                                    <th>Expiration Date</th>
                                    <th>Credits</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for client in clients %}
                                    <tr>
                                        <td>
                                            <div class="d-flex">
                                                <div class="usr-img-frame mr-2 rounded-circle">
                                                    <img alt="avatar" class="img-fluid rounded-circle" src="theme/assets/img/90x90.jpg">
                                                </div>
                                                <p class="align-self-center mb-0 admin-name"> {{ client.firstName }} {{ client.lastName }} </p>
                                            </div>
                                        </td>
                                        <td>{{ client.email }}</td>
                                        <td>{{ client.phone }}</td>
                                        <td>{{ client.membership.name }}</td>
                                        <td>{{ client.membershipExpiryDate | date('Y-m-d') }}</td>
                                        <td>{{ client.creditsRemaining }}</td>
                                        <td class="text-center">
                                            <div class="dropdown">
                                                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                                                </a>

                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink1" style="will-change: transform;">
{#                                                    <a class="dropdown-item" href="javascript:void(0);">View</a>#}
                                                    <a class="dropdown-item action-edit mt-2 mb-2" style="background: rgba(33, 150, 243, 0.12); color: #2196f3;" data-toggle="modal" data-target="#editModal" onclick="populateModal({{ client.id }})" href="javascript:void(0);">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-3"><path d="M12 20h9"></path><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg>
                                                        Edit
                                                    </a>
                                                    <a class="dropdown-item action-edit mt-2 mb-2" style="background: rgba(7, 117, 38, 0.12); color: #077526;" href="{{ path('appointmentsCalendar', {'user_id': client.id}) }}">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-calendar"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                                                        Appointment
                                                    </a>
                                                    <a class="dropdown-item action-delete" style="background: rgba(231, 81, 90, 0.12); color: #e7515a;" href="javascript:void(0);">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg>
                                                        Delete
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Membership</th>
                                    <th>Expiration Date</th>
                                    <th>Credits</th>
                                    <th>Action</th>
                                </tr>
                                </tfoot>
                            </table>

                        </div>
                    </div>
                </div>

            </div>
            <div class="footer-wrapper">
                <div class="footer-section f-section-1">
                    <p class="">Copyright Â© 2022 <a target="_blank" href="http://pryme.fit">Pryme</a>, All rights reserved.</p>
                </div>
            </div>
        </div>
        <!--  END CONTENT AREA  -->
    </div>
    <!-- END MAIN CONTAINER -->


    <!-- EDIT CLIENT MODAL -->
    <div class="modal fade bd-example-modal-xl show" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">

                <div class="modal-header" id="editModalLabel">
                    <h4 class="modal-title">Edit Client</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div id="flFormsGrid" class="col-lg-12 layout-spacing">
                            <div class="statbox widget box box-shadow">

                                <div class="widget-content widget-content-area">
                                    <form method="get" id="updateClient">
                                        <div class="form-row mb-4">
                                            <div class="form-group col-md-4">
                                                <label for="membership" class="">Membership:</label>
                                                <div class="d-flex event-title">
                                                    <select id="membership" name="membership" class="selectpicker form-control" data-live-search="true">
                                                        <option value="0">Select Membership</option>
                                                        {% for membership in memberships %}
                                                            <option value="{{ membership.id }}">{{ membership.name }}</option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label for="credits">Credits</label>
                                                <input type="number" class="form-control" name="credits" id="credits" placeholder="Remanining credits">
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label for="membership_expiration">Membership expiration</label>
                                                <div class="d-flex">
                                                    <input type="text" class="form-control" name="membership_expiration" id="membership_expiration" placeholder="Membership expiration date">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-row mb-4">
                                            <div class="form-group col-md-6">
                                                <label for="firstname">First Name</label>
                                                <input type="text" class="form-control" name="firstname" id="firstname" placeholder="First name">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="lastname">Last Name</label>
                                                <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Last name">
                                            </div>
                                        </div>
                                        <div class="form-row mb-4">
                                            <div class="form-group col-md-6">
                                                <label for="email">Email</label>
                                                <input type="email" class="form-control" name="email" id="email" placeholder="Email">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="phone">Phone</label>
                                                <input type="text" class="form-control" name="phone" id="phone" placeholder="Phone">
                                            </div>
                                        </div>
                                        <div class="form-row mb-4">
                                            <div class="form-group col-md-6">
                                                <label for="inputAddress">Street & number</label>
                                                <input type="text" class="form-control" name="street" id="street" placeholder="Street">
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label for="inputAddress">City</label>
                                                <input type="text" class="form-control" name="city" id="city" placeholder="City">
                                            </div>
                                            <div class="form-group col-md-2">
                                                <label for="zip">Zip</label>
                                                <input type="text" class="form-control" name="zip" id="zip">
                                            </div>
                                        </div>
                                        <div class="form-row mb-4">
                                            <div class="form-group col-md-6">
                                                <label for="inputCity">State</label>
                                                <input type="text" class="form-control" name="state" id="state">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputCity">Country</label>
                                                <input type="text" class="form-control" name="country" id="country">
                                            </div>

                                        </div>
                                        <input type="hidden" id="userID">
                                        <button type="button" id="editUserSubmit" class="btn btn-primary mt-3">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

            </div>
        </div>
    </div>



{% endblock %}


{% block javascripts %}
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="theme/plugins/table/datatable/datatables.js"></script>
    <script src="theme/assets/js/scrollspyNav.js"></script>
    <script src="theme/plugins/file-upload/file-upload-with-preview.min.js"></script>
    <script src="{{ asset('theme/plugins/bootstrap-select/bootstrap-select.min.js') }}"></script>
    <script src="{{ asset('theme/plugins/flatpickr/flatpickr.js') }}"></script>
    <script>


        $('#multi-column-ordering').DataTable({
            "dom": "<'dt--top-section'<'row'<'col-12 col-sm-6 d-flex justify-content-sm-start justify-content-center'l><'col-12 col-sm-6 d-flex justify-content-sm-end justify-content-center mt-sm-0 mt-3'f>>>" +
                "<'table-responsive'tr>" +
                "<'dt--bottom-section d-sm-flex justify-content-sm-between text-center'<'dt--pages-count  mb-sm-0 mb-3'i><'dt--pagination'p>>",
            "oLanguage": {
                "oPaginate": { "sPrevious": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>', "sNext": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>' },
                "sInfo": "Showing page _PAGE_ of _PAGES_",
                "sSearch": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>',
                "sSearchPlaceholder": "Search...",
                "sLengthMenu": "Results :  _MENU_",
            },
            "stripeClasses": [],
            "lengthMenu": [10, 20, 50],
            "pageLength": 10,
            columnDefs: [ {
                targets: [ 0 ],
                orderData: [ 0, 1 ]
            }, {
                targets: [ 1 ],
                orderData: [ 1, 0 ]
            }, {
                targets: [ 4 ],
                orderData: [ 4, 0 ]
            } ]
        });

        $('#editUserSubmit').click(function (){
            let formData = $('#updateClient').serializeArray();

            $.ajax({
                url: '/updateClient/' + $("#userID").val(),
                type: "POST",
                data: objectifyForm(formData),
                success: function (data) {
                    location.reload();
                }
            })
        })

        function objectifyForm(formArray) {
            var returnArray = {};
            for (var i = 0; i < formArray.length; i++){
                returnArray[formArray[i]['name']] = formArray[i]['value'];
            }
            return returnArray;
        }

        function populateModal(id) {
            $("#userID").val(id);
            $.ajax({
                url: '/updateClient/' + id,
                type: 'POST',
                dataType: 'json',
                success: function(user) {
                    $("#firstname").val(user.first_name);
                    $("#lastname").val(user.last_name);
                    $("#email").val(user.email);
                    $("#phone").val(user.phone);
                    $("#street").val(user.street);
                    $("#city").val(user.city);
                    $("#zip").val(user.zip);
                    $("#state").val(user.state);
                    $("#country").val(user.country);
                    $("#membership").selectpicker('val', user.membershipID);
                    $("#credits").val(user.creditsRemaining);
                    let membershipExpiration = flatpickr(document.getElementById('membership_expiration'), {
                        enableTime: false,
                        dateFormat: "Y-m-d",
                        defaultDate: user.membershipExpiryDate.date
                    });
                    //alert(user.membershipExpiryDate);
                }
            });
        }
    </script>
    <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
